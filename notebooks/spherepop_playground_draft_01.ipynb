# Spherepop Playground Notebook (run cell-by-cell in Jupyter)
# -----------------------------------------------------------
# A minimal executable toy model of Spherepop:
#   - Spheres = delayed irreversible events
#   - Pop = evaluates once and records history
#   - History defines identity
#   - Nested scopes = compositional structure
#   - Simple visualizations of event-history geometry

import uuid
from dataclasses import dataclass, field
from typing import Callable, Any, List, Tuple, Dict
import matplotlib.pyplot as plt

# -----------------------------
# Core Spherepop Structures
# -----------------------------

@dataclass
class Event:
    eid: str
    label: str
    value: Any
    parents: Tuple[str, ...]

@dataclass
class History:
    events: Dict[str, Event] = field(default_factory=dict)

    def add(self, event: Event):
        self.events[event.eid] = event

    def lineage(self, eid: str) -> List[str]:
        # simple DFS ancestry
        seen = set()
        order = []
        def dfs(x):
            if x in seen: return
            seen.add(x)
            for p in self.events[x].parents:
                dfs(p)
            order.append(x)
        dfs(eid)
        return order

@dataclass
class Sphere:
    label: str
    thunk: Callable[['History'], Any]
    _eid: str = None

    def pop(self, history: History) -> Tuple[Any, str]:
        if self._eid is not None:
            # already popped: irreversible
            return history.events[self._eid].value, self._eid

        value, parents = self.thunk(history)
        eid = str(uuid.uuid4())
        history.add(Event(eid=eid, label=self.label, value=value, parents=parents))
        self._eid = eid
        return value, eid

# -----------------------------
# Primitive Constructors
# -----------------------------

def const(label, x):
    return Sphere(label, lambda h: (x, ()))


def add(label, a: Sphere, b: Sphere):
    def thunk(h):
        va, ea = a.pop(h)
        vb, eb = b.pop(h)
        return va + vb, (ea, eb)
    return Sphere(label, thunk)


def mul(label, a: Sphere, b: Sphere):
    def thunk(h):
        va, ea = a.pop(h)
        vb, eb = b.pop(h)
        return va * vb, (ea, eb)
    return Sphere(label, thunk)

# -----------------------------
# Example: (1 + 2) * 3
# -----------------------------

H = History()

s1 = const("one", 1)
s2 = const("two", 2)
s3 = const("three", 3)

s_add = add("add", s1, s2)
s_expr = mul("mul", s_add, s3)

value, root = s_expr.pop(H)
value, root

# -----------------------------
# Identity by History
# -----------------------------

# Rebuild same expression separately
H2 = History()
a1 = const("one", 1)
a2 = const("two", 2)
a3 = const("three", 3)
expr2 = mul("mul", add("add", a1, a2), a3)
v2, root2 = expr2.pop(H2)

# Same value, different history => not identical
value, v2, root == root2

# -----------------------------
# Visualize Event Graph Geometry
# -----------------------------

# Simple layered layout by depth

def depth(h: History, eid: str) -> int:
    e = h.events[eid]
    if not e.parents:
        return 0
    return 1 + max(depth(h, p) for p in e.parents)

nodes = list(H.events.keys())
depths = {eid: depth(H, eid) for eid in nodes}

# x positions spread within each depth layer
layers = {}
for eid, d in depths.items():
    layers.setdefault(d, []).append(eid)

pos = {}
for d, eids in layers.items():
    for i, eid in enumerate(eids):
        pos[eid] = (i, -d)

plt.figure()
for eid, e in H.events.items():
    x, y = pos[eid]
    plt.scatter([x], [y])
    plt.text(x+0.02, y+0.02, e.label)
    for p in e.parents:
        xp, yp = pos[p]
        plt.plot([xp, x], [yp, y])

plt.title("Spherepop Event-History Geometry")
plt.axis('off')
plt.show()

# -----------------------------
# Nested Scopes as Reusable Sub-Spheres
# -----------------------------

H3 = History()
inner = add("inner_add", const("a", 4), const("b", 5))  # 4 + 5
outer1 = mul("outer1", inner, const("c", 10))           # (4+5)*10
outer2 = mul("outer2", inner, const("d", 100))          # (4+5)*100

v1, r1 = outer1.pop(H3)
v2, r2 = outer2.pop(H3)

# inner popped once, reused irreversibly
v1, v2, len(H3.events)

# -----------------------------
# Trajectory View: Lineage of an Event
# -----------------------------

line = H3.lineage(r2)
[(H3.events[e].label, H3.events[e].value) for e in line]
